{
  "default": false,
  "MD003": {
    "style": "atx"
  }, // Heading style - use ATX style (#)
  "MD004": {
    "style": "dash"
  }, // Unordered list style - use dashes
  "MD007": {
    "indent": 2,
    "start_indented": false
  }, // Unordered list indentation - 2 spaces
  "MD013": false, // Line length - disabled for our content
  "MD022": false, // Blanks around headings - disabled for our format
  "MD024": false, // Multiple headings with the same content - disabled for our numbered sections
  "MD025": {
    "level": 1
  }, // Multiple top level headings in the same document - only one H1 allowed
  "MD029": {
    "style": "ordered"
  }, // Ordered list item prefix - use numbers
  "MD030": {
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  }, // Spaces after list markers - 1 space
  "MD032": false, // Blanks around lists - disabled for our format
  "MD033": false, // Inline HTML - disabled for our blockquotes
  "MD034": false, // Bare URL used - disabled for our relative links
  "MD035": {
    "style": "---"
  }, // Horizontal rule style - use ---
  "MD036": false, // Emphasis used instead of a heading - disabled
  "MD041": false, // First line in file should be a top level heading - disabled for our format
  "MD046": {
    "style": "fenced"
  }, // Code block style - use fenced
  "MD048": {
    "style": "backtick"
  } // Code fence style - use backticks
}